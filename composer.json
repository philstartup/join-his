{
    "name": "hyperf/hyperf-skeleton",
    "type": "project",
    "keywords": [
        "php",
        "swoole",
        "framework",
        "hyperf",
        "hyperf-base",
        "hyperf-admin",
        "microservice",
        "middleware"
    ],
    "description": "Hyperf 3.x 基础骨架",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-redis": "*",
        "ext-swoole": ">=5.0",
        "firebase/php-jwt": "^6.4",
        "hyperf/cache": "3.1.*",
        "hyperf/command": "3.1.*",
        "hyperf/config": "3.1.*",
        "hyperf/constants": "3.1.*",
        "hyperf/database": "3.1.*",
        "hyperf/db-connection": "3.1.*",
        "hyperf/filesystem": "3.1.*",
        "hyperf/framework": "3.1.*",
        "hyperf/guzzle": "3.1.*",
        "hyperf/http-server": "3.1.*",
        "hyperf/logger": "3.1.*",
        "hyperf/memory": "3.1.*",
        "hyperf/process": "3.1.*",
        "hyperf/redis": "3.1.*",
        "hyperf/resource": "3.1.*",
        "hyperf/validation": "3.1.*",
        "overtrue/easy-sms": "^2.4",
        "phpdocumentor/reflection-docblock": "^5.3",
        "yadakhov/insert-on-duplicate-key": "^1.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/devtool": "3.1.*",
        "hyperf/testing": "3.1.*",
        "hyperf/watcher": "3.1.*",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "swoole/ide-helper": "dev-master"
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client."
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/",
            "Kernel\\": "kernel/"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "./test/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": [],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container"
        ],
        "test": "co-phpunit --prepend test/bootstrap.php -c phpunit.xml --colors=always",
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config",
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "php ./bin/hyperf.php start"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "composer dump-autoload -o && php ./bin/hyperf.php server:watch"
        ],
        "kill": "kill -QUIT $(lsof -i:9501 | grep LISTEN | awk '{print $2}')"
    }
}
